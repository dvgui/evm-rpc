{
    "name": "evm-rpc",
    "version": "1.0.0",
    "type": "module",
    "description": "A TypeScript RPC framework for EVM blockchain interactions",
    "main": "dist/index.js",
    "bin": {
        "evm-rpc": "dist/cli.js"
    },
    "scripts": {
        "build": "node build.js",
        "build:tsc": "tsc",
        "dev": "node build.js --dev",
        "start": "node dist/cli.js",
        "evm-rpc": "node dist/cli.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "clean": "rimraf dist",
        "lint": "eslint src/**/*.ts tests/**/*.ts --fix",
        "lint:check": "eslint src/**/*.ts tests/**/*.ts"
    },
    "keywords": [
        "ethereum",
        "rpc",
        "blockchain",
        "evm",
        "typescript"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "axios": "^1.6.0",
        "commander": "^14.0.0",
        "ethers": "^6.0.0"
    },
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "@types/node": "^24.1.0",
        "@typescript-eslint/eslint-plugin": "^8.38.0",
        "@typescript-eslint/parser": "^8.38.0",
        "esbuild": "^0.25.8",
        "eslint": "^9.32.0",
        "eslint-plugin-jest": "^29.0.1",
        "eslint-plugin-unused-imports": "^4.1.4",
        "globals": "^16.3.0",
        "jest": "^30.0.5",
        "rimraf": "^6.0.1",
        "ts-jest": "^29.4.0",
        "typescript": "^5.0.0"
    }
}
